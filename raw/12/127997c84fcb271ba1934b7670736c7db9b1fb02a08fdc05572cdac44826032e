<?php
function kaya_recentportfolio($atts, $content = null) {
	extract(shortcode_atts(array(
		"pagination" => 'false',
		"portfolio" => '',
		'postlimit' => '',
		'width'		=>'50',
		'height'	=> '50',
		'comments' => '',
	), $atts));
	global $wp_query,$paged,$post;
	 $marginleft=$width+30;
	$temp = $wp_query;
	$wp_query= null;
	$wp_query = new WP_Query();
	$query = 'post_type=kayaportfolio';
	$query .= '&taxonomy=portfolio_category';
	
	if($pagination == 'true'){
		$query .= '&paged='.$paged;
	}
	if(!empty($portfolio)){
		$query .= '&term='.$portfolio;
	}
	if(!empty($postlimit)){
		$query .= '&posts_per_page='.$postlimit;
	}
	$wp_query->query($query);
	ob_start();
	?>
<?php $out='';
	$out.='<ul class="sc_recentportfolio_posts">';
	 while ($wp_query->have_posts()) : $wp_query->the_post(); 
	 $permalink = get_permalink($post->ID);
	   $post_title = get_the_title($post->ID);
	  $count=$post->comment_count;
		$out.='<li>';
        	if (
					function_exists('the_post_thumbnail') &&
					current_theme_supports("post-thumbnails") &&
					!isset($instance["thumb"]) &&
					has_post_thumbnail()
				) :
			    
			 $out.='<a href="'.$permalink.'">';                      
				$thumb = get_post_thumbnail_id(); 
				$image = vt_resize( $thumb, '', $width, $height, true );		
					
			if($thumb){ 
				$out.='<img class="alignleft img-border1" src="'.$image[url].'" width="'.$image[width].'" height="'.$image[height].'" />';
			} 
                      
                     $out.='</a>';
					
					// $out.='<div class="clear"></div>';
             		$out.='<div  style="margin-left:'.$marginleft.'px">';
					
                    $out.='<a href="'.$permalink.'" rel="bookmark"><strong>'.$post_title.'</strong></a><br />';
                    if($comments == 'true'){
					
				
                     $out.='<span class="recentpost-comments">'.$count.'</span>';
                       }                  
					  $out.=content(10);
                     $out.='</div>';
			 endif;
            
         $out.='</li>';
	endwhile;
	$out.='</ul>';
	
if($pagination == 'true'){
	$out.='<div class="navigation">';
	 $out.=kaya_pagination();

	$out.='</div>';
 } 
  $wp_query = null; $wp_query = $temp;
	$content = ob_get_contents();
	$out.=$content;
	ob_end_clean();
	return $out;
}
add_shortcode("recentportfolio", "kaya_recentportfolio");
?>